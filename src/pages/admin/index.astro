---
import AdminLayout from "../../layouts/AdminLayout.astro";
import { getDashboardStats } from "../../lib/services/dashboard";

// Get user info for welcome message - defensive approach
const user = Astro.locals.user;
const username = user?.username || user?.name || "Admin";

// Fetch dashboard statistics directly
let stats;
try {
	stats = await getDashboardStats();
} catch (error) {
	console.error("Failed to fetch admin stats:", error);
	// Default stats in case of error
	stats = {
		totalUsers: 0,
		newUsers: 0,
		totalBlogs: 0,
		blogViews: 0,
		totalThreads: 0,
		totalComments: 0,
		pendingModeration: 0,
		recentActivity: [],
		systemHealth: {
			database: "error",
			uptime: "unknown",
			lastBackup: "unknown",
		},
	};
}
---

<AdminLayout title="Admin Dashboard">
	<div class="space-y-6">
		<!-- Welcome Header -->
		<div class="bg-white rounded-lg border border-gray-200 p-6">
			<h1 class="text-2xl font-semibold text-gray-900 mb-2">
				Welcome back, {username}
			</h1>
			<p class="text-gray-600">
				Here's an overview of your platform's performance and recent activity.
			</p>
		</div>

		<!-- Statistics Grid -->
		<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
			<!-- Total Users -->
			<div class="bg-white rounded-lg border border-gray-200 p-5">
				<div class="flex items-center justify-between mb-4">
					<div class="w-10 h-10 bg-blue-50 rounded-lg flex items-center justify-center">
						<svg
							class="w-5 h-5 text-blue-600"
							fill="none"
							stroke="currentColor"
							viewBox="0 0 24 24"
						>
							<path
								stroke-linecap="round"
								stroke-linejoin="round"
								stroke-width="2"
								d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"
							></path>
						</svg>
					</div>
					{stats.newUsers > 0 && (
						<span class="text-xs font-medium text-green-600 bg-green-50 px-2 py-1 rounded">
							+{stats.newUsers}
						</span>
					)}
				</div>
				<p class="text-2xl font-semibold text-gray-900">{stats.totalUsers.toLocaleString()}</p>
				<p class="text-sm text-gray-500 mt-1">Total Users</p>
			</div>

			<!-- Total Blogs -->
			<div class="bg-white rounded-lg border border-gray-200 p-5">
				<div class="flex items-center justify-between mb-4">
					<div class="w-10 h-10 bg-purple-50 rounded-lg flex items-center justify-center">
						<svg
							class="w-5 h-5 text-purple-600"
							fill="none"
							stroke="currentColor"
							viewBox="0 0 24 24"
						>
							<path
								stroke-linecap="round"
								stroke-linejoin="round"
								stroke-width="2"
								d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"
							></path>
						</svg>
					</div>
					<span class="text-xs font-medium text-gray-500 bg-gray-100 px-2 py-1 rounded">Posts</span>
				</div>
				<p class="text-2xl font-semibold text-gray-900">{stats.totalBlogs.toLocaleString()}</p>
				<p class="text-sm text-gray-500 mt-1">Published Posts</p>
			</div>

			<!-- Total Threads -->
			<div class="bg-white rounded-lg border border-gray-200 p-5">
				<div class="flex items-center justify-between mb-4">
					<div class="w-10 h-10 bg-green-50 rounded-lg flex items-center justify-center">
						<svg
							class="w-5 h-5 text-green-600"
							fill="none"
							stroke="currentColor"
							viewBox="0 0 24 24"
						>
							<path
								stroke-linecap="round"
								stroke-linejoin="round"
								stroke-width="2"
								d="M17 8h2a2 2 0 012 2v6a2 2 0 01-2 2h-2v4l-4-4H9a1.994 1.994 0 01-1.414-.586m0 0L11 14h4a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2v4l.586-.586z"
							></path>
						</svg>
					</div>
					<span class="text-xs font-medium text-green-600 bg-green-50 px-2 py-1 rounded">Active</span>
				</div>
				<p class="text-2xl font-semibold text-gray-900">{stats.totalThreads.toLocaleString()}</p>
				<p class="text-sm text-gray-500 mt-1">Forum Threads</p>
			</div>

			<!-- Pending Moderation -->
			<div class="bg-white rounded-lg border border-gray-200 p-5">
				<div class="flex items-center justify-between mb-4">
					<div class="w-10 h-10 bg-orange-50 rounded-lg flex items-center justify-center">
						<svg
							class="w-5 h-5 text-orange-600"
							fill="none"
							stroke="currentColor"
							viewBox="0 0 24 24"
						>
							<path
								stroke-linecap="round"
								stroke-linejoin="round"
								stroke-width="2"
								d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"
							></path>
						</svg>
					</div>
					{stats.pendingModeration > 0 && (
						<span class="text-xs font-medium text-red-600 bg-red-50 px-2 py-1 rounded animate-pulse">
							Pending
						</span>
					)}
				</div>
				<p class="text-2xl font-semibold text-gray-900">{stats.pendingModeration}</p>
				<p class="text-sm text-gray-500 mt-1">Needs Review</p>
			</div>
		</div>

		<!-- Quick Actions -->
		<div class="bg-white rounded-lg border border-gray-200 p-6">
			<h2 class="text-lg font-semibold text-gray-900 mb-4">Quick Actions</h2>
			<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
				<a
					href="/admin/blogs/create"
					class="flex items-center gap-3 p-4 rounded-lg border border-gray-200 hover:border-blue-300 hover:bg-blue-50 transition-colors"
				>
					<div class="w-10 h-10 bg-blue-100 rounded-lg flex items-center justify-center">
						<svg
							class="w-5 h-5 text-blue-600"
							fill="none"
							stroke="currentColor"
							viewBox="0 0 24 24"
						>
							<path
								stroke-linecap="round"
								stroke-linejoin="round"
								stroke-width="2"
								d="M12 4v16m8-8H4"
							></path>
						</svg>
					</div>
					<div>
						<p class="font-medium text-gray-900">Create Blog</p>
						<p class="text-sm text-gray-500">Write a new article</p>
					</div>
				</a>

				<a
					href="/admin/users"
					class="flex items-center gap-3 p-4 rounded-lg border border-gray-200 hover:border-green-300 hover:bg-green-50 transition-colors"
				>
					<div class="w-10 h-10 bg-green-100 rounded-lg flex items-center justify-center">
						<svg
							class="w-5 h-5 text-green-600"
							fill="none"
							stroke="currentColor"
							viewBox="0 0 24 24"
						>
							<path
								stroke-linecap="round"
								stroke-linejoin="round"
								stroke-width="2"
								d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"
							></path>
						</svg>
					</div>
					<div>
						<p class="font-medium text-gray-900">User List</p>
						<p class="text-sm text-gray-500">Manage user base</p>
					</div>
				</a>

				<a
					href="/admin/reports"
					class="flex items-center gap-3 p-4 rounded-lg border border-gray-200 hover:border-orange-300 hover:bg-orange-50 transition-colors"
				>
					<div class="w-10 h-10 bg-orange-100 rounded-lg flex items-center justify-center">
						<svg
							class="w-5 h-5 text-orange-600"
							fill="none"
							stroke="currentColor"
							viewBox="0 0 24 24"
						>
							<path
								stroke-linecap="round"
								stroke-linejoin="round"
								stroke-width="2"
								d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"
							></path>
						</svg>
					</div>
					<div>
						<p class="font-medium text-gray-900">Reports</p>
						<p class="text-sm text-gray-500">Audit flagging reports</p>
					</div>
				</a>

				<a
					href="/admin/analytics"
					class="flex items-center gap-3 p-4 rounded-lg border border-gray-200 hover:border-purple-300 hover:bg-purple-50 transition-colors"
				>
					<div class="w-10 h-10 bg-purple-100 rounded-lg flex items-center justify-center">
						<svg
							class="w-5 h-5 text-purple-600"
							fill="none"
							stroke="currentColor"
							viewBox="0 0 24 24"
						>
							<path
								stroke-linecap="round"
								stroke-linejoin="round"
								stroke-width="2"
								d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"
							></path>
						</svg>
					</div>
					<div>
						<p class="font-medium text-gray-900">Analytics</p>
						<p class="text-sm text-gray-500">Platform metrics</p>
					</div>
				</a>
			</div>
		</div>

		<!-- Recent Activity & System Health -->
		<div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
			<!-- Recent Activity -->
			<div class="bg-white rounded-lg border border-gray-200 p-6">
				<h2 class="text-lg font-semibold text-gray-900 mb-4">Recent Activity</h2>
				<div class="space-y-3">
					{stats.recentActivity.length > 0 ? (
						stats.recentActivity.map((activity: any) => (
							<div class="flex items-start gap-3 p-3 rounded-lg bg-gray-50">
								<div class="w-8 h-8 bg-blue-100 rounded-lg flex items-center justify-center flex-shrink-0">
									<svg
										class="w-4 h-4 text-blue-600"
										fill="none"
										stroke="currentColor"
										viewBox="0 0 24 24"
									>
										<path
											stroke-linecap="round"
											stroke-linejoin="round"
											stroke-width="2"
											d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
										/>
									</svg>
								</div>
								<div class="flex-1 min-w-0">
									<p class="text-sm text-gray-900">{activity.description}</p>
									<p class="text-xs text-gray-500 mt-1">{activity.timestamp}</p>
								</div>
							</div>
						))
					) : (
						<div class="text-center py-8">
							<div class="w-12 h-12 bg-gray-100 rounded-lg flex items-center justify-center mx-auto mb-3">
								<svg
									class="w-6 h-6 text-gray-400"
									fill="none"
									stroke="currentColor"
									viewBox="0 0 24 24"
								>
									<path
										stroke-linecap="round"
										stroke-linejoin="round"
										stroke-width="2"
										d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"
									/>
									</svg>
								</div>
								<p class="text-sm text-gray-500">No recent activity</p>
							</div>
						)}
				</div>
			</div>

			<!-- System Health -->
			<div class="bg-white rounded-lg border border-gray-200 p-6">
				<h2 class="text-lg font-semibold text-gray-900 mb-4">System Status</h2>
				<div class="space-y-4">
					<div class="p-4 bg-gray-50 rounded-lg">
						<div class="flex items-center justify-between mb-2">
							<div class="flex items-center gap-2">
								<div class="w-2 h-2 rounded-full bg-green-500"></div>
								<span class="text-sm font-medium text-gray-700">Database</span>
							</div>
							<span class="text-xs font-medium text-green-600 bg-green-50 px-2 py-1 rounded">Operational</span>
						</div>
						<div class="flex items-center justify-between text-sm">
							<span class="text-gray-500">Latency</span>
							<span class="text-gray-900">4ms <span class="text-green-600">(Excellent)</span></span>
						</div>
					</div>

					<div class="grid grid-cols-2 gap-4">
						<div class="p-4 bg-gray-50 rounded-lg text-center">
							<p class="text-xs text-gray-500 mb-1">Uptime</p>
							<p class="text-lg font-semibold text-gray-900">99.98%</p>
						</div>
						<div class="p-4 bg-gray-50 rounded-lg text-center">
							<p class="text-xs text-gray-500 mb-1">Version</p>
							<p class="text-lg font-semibold text-gray-900">v1.4.2</p>
						</div>
					</div>

					<div class="space-y-3">
						<div>
							<div class="flex items-center justify-between mb-1">
								<span class="text-xs font-medium text-gray-500">CPU Usage</span>
								<span class="text-sm text-gray-900">42%</span>
							</div>
							<div class="w-full h-2 bg-gray-200 rounded-full overflow-hidden">
								<div class="w-[42%] h-full bg-blue-500 rounded-full"></div>
							</div>
						</div>
						<div>
							<div class="flex items-center justify-between mb-1">
								<span class="text-xs font-medium text-gray-500">Memory</span>
								<span class="text-sm text-gray-900">2.4 / 8 GB</span>
							</div>
							<div class="w-full h-2 bg-gray-200 rounded-full overflow-hidden">
								<div class="w-[30%] h-full bg-purple-500 rounded-full"></div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</AdminLayout>
