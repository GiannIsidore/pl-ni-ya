---
import AdminLayout from "../../../layouts/AdminLayout.astro";
import { getCategories } from "../../../lib/services/categories";

const page = Number(Astro.url.searchParams.get("page")) || 1;
const limit = 12;
const search = Astro.url.searchParams.get("search") || "";

const { categories, total, totalPages } = await getCategories({
	page,
	limit,
	search,
});

const pages = Array.from({ length: totalPages }, (_, i) => i + 1);
---

<AdminLayout title="Manage Categories">
	<div class="space-y-6">
		<!-- Header -->
		<div
			class="flex flex-col md:flex-row md:items-center justify-between gap-4"
		>
			<div>
				<h1
					class="text-4xl font-normal text-white tracking-tight"
					style="font-family: 'Bebas Neue', sans-serif;"
				>
					Categories
				</h1>
				<p
					class="text-neutral-400 text-sm mt-1"
					style="font-family: 'Schibsted Grotesk', sans-serif;"
				>
					Organize your content with categories
				</p>
			</div>
			<button
				id="create-category-btn"
				class="inline-flex items-center justify-center gap-2 px-6 py-3 bg-blue-600 hover:bg-blue-700 text-white font-semibold rounded-xl transition-all duration-300 shadow-lg hover:shadow-blue-600/25 group"
			>
				<svg
					class="w-5 h-5 group-hover:rotate-90 transition-transform duration-300"
					fill="none"
					stroke="currentColor"
					viewBox="0 0 24 24"
				>
					<path
						stroke-linecap="round"
						stroke-linejoin="round"
						stroke-width="2"
						d="M12 4v16m8-8H4"></path>
				</svg>
				<span style="font-family: 'Schibsted Grotesk', sans-serif;"
					>Add Category</span
				>
			</button>
		</div>

		<!-- Search & Stats -->
		<div
			class="bg-neutral-900 border border-neutral-800 rounded-2xl p-4 flex flex-col lg:flex-row gap-4 items-center justify-between shadow-lg"
		>
			<!-- Search -->
			<form
				class="flex flex-1 w-full lg:w-auto flex-col sm:flex-row gap-3 items-center"
				method="get"
			>
				<div class="flex w-full max-w-md gap-2">
					<div class="relative flex-1 group">
						<div
							class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none"
						>
							<svg
								class="h-4 w-4 text-neutral-500 group-focus-within:text-blue-500 transition-colors"
								fill="none"
								stroke="currentColor"
								viewBox="0 0 24 24"
							>
								<path
									stroke-linecap="round"
									stroke-linejoin="round"
									stroke-width="2"
									d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"
								></path>
							</svg>
						</div>
						<input
							type="text"
							name="search"
							value={search}
							placeholder="Search categories..."
							class="block w-full pl-10 pr-3 h-10 bg-neutral-800 border border-neutral-700 rounded-xl text-white text-sm placeholder-neutral-500 focus:outline-none focus:ring-2 focus:ring-blue-500/30 focus:border-blue-500 transition-all"
						/>
					</div>
					<button
						type="submit"
						class="px-4 h-10 bg-neutral-700 hover:bg-neutral-600 text-white text-xs font-bold uppercase tracking-widest rounded-xl transition-all border border-neutral-600"
					>
						Search
					</button>
				</div>
			</form>

			<!-- Stats -->
			<div class="flex items-center gap-4 text-sm">
				<div class="text-neutral-400">
					<span class="text-white font-semibold">{total}</span> total categories
				</div>
			</div>
		</div>

		<!-- Categories Grid -->
		{
			categories.length === 0 ? (
				<div class="bg-neutral-900/50 border border-neutral-800 rounded-2xl p-16 text-center">
					<div class="w-20 h-20 bg-neutral-800 rounded-full flex items-center justify-center mx-auto mb-6">
						<svg
							class="w-10 h-10 text-neutral-600"
							fill="none"
							stroke="currentColor"
							viewBox="0 0 24 24"
						>
							<path
								stroke-linecap="round"
								stroke-linejoin="round"
								stroke-width="2"
								d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"
							/>
						</svg>
					</div>
					<h3 class="text-xl font-bold text-white mb-2">
						No categories found
					</h3>
					<p class="text-neutral-400 mb-6">
						{search ? "Try adjusting your search terms." : "Get started by creating your first category."}
					</p>
					<button
						id="create-category-btn-empty"
						class="inline-flex items-center px-6 py-2.5 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-xl transition-colors"
					>
						Create Category
					</button>
				</div>
			) : (
				<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
					{categories.map((category) => (
						<div
							class="group bg-neutral-900 rounded-2xl p-6 border border-neutral-800 hover:border-blue-500/50 transition-all duration-300 shadow-lg hover:shadow-xl hover:shadow-blue-500/5"
							data-category-id={category.id}
						>
							<div class="flex items-start justify-between mb-4">
								<div class="w-12 h-12 bg-blue-600/10 rounded-xl flex items-center justify-center group-hover:bg-blue-600 transition-colors duration-300">
									<svg
										class="w-6 h-6 text-blue-500 group-hover:text-white transition-colors"
										fill="none"
										stroke="currentColor"
										viewBox="0 0 24 24"
									>
										<path
											stroke-linecap="round"
											stroke-linejoin="round"
											stroke-width="2"
											d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"
										/>
									</svg>
								</div>
								<div class="flex items-center gap-1">
									<button
										class="edit-btn p-2 text-neutral-500 hover:text-blue-400 hover:bg-blue-600/10 rounded-lg transition-all"
										data-id={category.id}
										data-name={category.name}
										data-slug={category.slug}
										data-description={category.description}
										title="Edit"
									>
										<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
											<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
										</svg>
									</button>
									<button
										class="delete-btn p-2 text-neutral-500 hover:text-red-400 hover:bg-red-600/10 rounded-lg transition-all"
										data-id={category.id}
										data-name={category.name}
										data-count={category.blogCount}
										title="Delete"
									>
										<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
											<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
										</svg>
									</button>
								</div>
							</div>

							<h3
								class="text-xl font-semibold text-white mb-2 group-hover:text-blue-400 transition-colors"
								style="font-family: 'Schibsted Grotesk', sans-serif;"
							>
								{category.name}
							</h3>

							{category.description && (
								<p class="text-neutral-500 text-sm mb-4 line-clamp-2">
									{category.description}
								</p>
							)}

							<div class="flex items-center justify-between pt-4 border-t border-neutral-800">
								<div class="flex items-center gap-2 text-sm">
									<span class="text-neutral-500">Slug:</span>
									<code class="text-neutral-400 bg-neutral-800 px-2 py-0.5 rounded text-xs">
										/{category.slug}
									</code>
								</div>
								<div class="flex items-center gap-1 text-sm">
									<span class="text-blue-400 font-semibold">{category.blogCount}</span>
									<span class="text-neutral-500">posts</span>
								</div>
							</div>
						</div>
					))}
				</div>
			)
		}

		<!-- Pagination -->
		{
			totalPages > 1 && (
				<div class="flex items-center justify-between pt-6 border-t border-neutral-800">
					<div class="text-sm text-neutral-500">
						Showing {(page - 1) * limit + 1} - {Math.min(page * limit, total)} of{" "}
						{total} categories
					</div>
					<div class="flex items-center gap-2">
						{page > 1 && (
							<a
								href={`?page=${page - 1}&search=${search}`}
								class="px-4 py-2 bg-neutral-800 hover:bg-neutral-700 text-white rounded-xl transition-colors text-sm font-medium"
							>
								Previous
							</a>
							)}
						<div class="flex items-center gap-1">
							{pages.map((p) => (
								<a
									href={`?page=${p}&search=${search}`}
									class={`w-10 h-10 flex items-center justify-center rounded-xl text-sm font-medium transition-colors ${
										p === page
											? "bg-blue-600 text-white"
											: "bg-neutral-800 text-neutral-400 hover:bg-neutral-700 hover:text-white"
									}`}
								>
									{p}
								</a>
							))}
						</div>
						{page < totalPages && (
							<a
								href={`?page=${page + 1}&search=${search}`}
								class="px-4 py-2 bg-neutral-800 hover:bg-neutral-700 text-white rounded-xl transition-colors text-sm font-medium"
							>
								Next
							</a>
							)}
					</div>
				</div>
			)
		}
	</div>

	<!-- Create/Edit Modal -->
	<div
		id="category-modal"
		class="fixed inset-0 bg-black/70 backdrop-blur-sm z-50 hidden items-center justify-center p-4"
	>
		<div class="bg-neutral-900 rounded-2xl border border-neutral-800 shadow-2xl w-full max-w-md overflow-hidden">
			<div class="p-6 border-b border-neutral-800">
				<h2
					id="modal-title"
					class="text-2xl font-normal text-white tracking-tight"
					style="font-family: 'Bebas Neue', sans-serif;"
				>
					Create Category
				</h2>
				<p class="text-neutral-400 text-sm mt-1">
					<span id="modal-subtitle">Add a new category to organize your content</span>
				</p>
			</div>

			<form id="category-form" class="p-6 space-y-4">
				<input type="hidden" id="category-id" value="" />

				<div>
					<label
						for="category-name"
						class="block text-white font-semibold mb-2 text-sm"
						style="font-family: 'Schibsted Grotesk', sans-serif;"
					>
						Category Name <span class="text-red-500">*</span>
					</label>
					<input
						type="text"
						id="category-name"
						name="name"
						required
						placeholder="e.g., Technology, Lifestyle, News"
						class="w-full px-4 py-3 bg-neutral-800 border border-neutral-700 rounded-xl text-white placeholder-neutral-500 focus:border-blue-500 focus:outline-none focus:ring-2 focus:ring-blue-500/20 transition-all"
						style="font-family: 'Schibsted Grotesk', sans-serif;"
					/>
				</div>

				<div>
					<label
						for="category-slug"
						class="block text-white font-semibold mb-2 text-sm"
						style="font-family: 'Schibsted Grotesk', sans-serif;"
					>
						Slug <span class="text-neutral-500 font-normal">(auto-generated)</span>
					</label>
					<input
						type="text"
						id="category-slug"
						name="slug"
						placeholder="technology"
						class="w-full px-4 py-3 bg-neutral-800 border border-neutral-700 rounded-xl text-white placeholder-neutral-500 focus:border-blue-500 focus:outline-none focus:ring-2 focus:ring-blue-500/20 transition-all"
						style="font-family: 'Schibsted Grotesk', sans-serif;"
					/>
					<p class="text-neutral-500 text-xs mt-1">
						Used in URLs: /blogs?category=<span id="slug-preview">technology</span>
					</p>
				</div>

				<div>
					<label
						for="category-description"
						class="block text-white font-semibold mb-2 text-sm"
						style="font-family: 'Schibsted Grotesk', sans-serif;"
					>
						Description <span class="text-neutral-500 font-normal">(optional)</span>
					</label>
					<textarea
						id="category-description"
						name="description"
						rows="3"
						placeholder="Brief description of this category..."
						class="w-full px-4 py-3 bg-neutral-800 border border-neutral-700 rounded-xl text-white placeholder-neutral-500 focus:border-blue-500 focus:outline-none focus:ring-2 focus:ring-blue-500/20 transition-all resize-none"
						style="font-family: 'Schibsted Grotesk', sans-serif;"
					></textarea>
				</div>

				<div id="form-error" class="hidden p-3 bg-red-500/10 border border-red-500/20 rounded-xl">
					<p class="text-red-400 text-sm flex items-center gap-2">
						<svg class="w-4 h-4 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
						</svg>
						<span id="error-message"></span>
					</p>
				</div>

				<div class="flex items-center gap-3 pt-2">
					<button
						type="button"
						id="cancel-btn"
						class="flex-1 px-4 py-3 bg-neutral-800 hover:bg-neutral-700 text-white rounded-xl transition-colors font-medium"
					>
						Cancel
					</button>
					<button
						type="submit"
						id="submit-btn"
						class="flex-1 px-4 py-3 bg-blue-600 hover:bg-blue-700 text-white rounded-xl transition-colors font-medium flex items-center justify-center gap-2"
					>
						<span id="submit-text">Create</span>
						<svg id="submit-spinner" class="hidden w-4 h-4 animate-spin" fill="none" viewBox="0 0 24 24">
							<circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
							<path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
						</svg>
					</button>
				</div>
			</form>
		</div>
	</div>

	<!-- Delete Confirmation Modal -->
	<div
		id="delete-modal"
		class="fixed inset-0 bg-black/70 backdrop-blur-sm z-50 hidden items-center justify-center p-4"
	>
		<div class="bg-neutral-900 rounded-2xl border border-neutral-800 shadow-2xl w-full max-w-sm overflow-hidden">
			<div class="p-6 text-center">
				<div class="w-16 h-16 bg-red-500/10 rounded-full flex items-center justify-center mx-auto mb-4">
					<svg class="w-8 h-8 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
					</svg>
				</div>
				<h3 class="text-xl font-semibold text-white mb-2">Delete Category?</h3>
				<p class="text-neutral-400 text-sm mb-6">
					Are you sure you want to delete <strong id="delete-category-name" class="text-white"></strong>?
					<span id="delete-warning" class="block mt-2 text-red-400"></span>
				</p>
				<div class="flex items-center gap-3">
					<button
						id="cancel-delete-btn"
						class="flex-1 px-4 py-3 bg-neutral-800 hover:bg-neutral-700 text-white rounded-xl transition-colors font-medium"
					>
						Cancel
					</button>
					<button
						id="confirm-delete-btn"
						class="flex-1 px-4 py-3 bg-red-600 hover:bg-red-700 text-white rounded-xl transition-colors font-medium flex items-center justify-center gap-2"
					>
						<span>Delete</span>
						<svg id="delete-spinner" class="hidden w-4 h-4 animate-spin" fill="none" viewBox="0 0 24 24">
							<circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
							<path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
						</svg>
					</button>
				</div>
			</div>
		</div>
	</div>

	<script>
		// Modal elements
		const modal = document.getElementById('category-modal') as HTMLDivElement;
		const deleteModal = document.getElementById('delete-modal') as HTMLDivElement;
		const form = document.getElementById('category-form') as HTMLFormElement;
		const nameInput = document.getElementById('category-name') as HTMLInputElement;
		const slugInput = document.getElementById('category-slug') as HTMLInputElement;
		const descriptionInput = document.getElementById('category-description') as HTMLTextAreaElement;
		const categoryIdInput = document.getElementById('category-id') as HTMLInputElement;
		const modalTitle = document.getElementById('modal-title') as HTMLHeadingElement;
		const modalSubtitle = document.getElementById('modal-subtitle') as HTMLSpanElement;
		const submitText = document.getElementById('submit-text') as HTMLSpanElement;
		const slugPreview = document.getElementById('slug-preview') as HTMLSpanElement;
		const formError = document.getElementById('form-error') as HTMLDivElement;
		const errorMessage = document.getElementById('error-message') as HTMLSpanElement;
		const submitSpinner = document.getElementById('submit-spinner') as unknown as SVGElement;
		const submitBtn = document.getElementById('submit-btn') as HTMLButtonElement;

		// Delete modal elements
		const deleteCategoryName = document.getElementById('delete-category-name') as HTMLSpanElement;
		const deleteWarning = document.getElementById('delete-warning') as HTMLSpanElement;
		const deleteSpinner = document.getElementById('delete-spinner') as unknown as SVGElement;
		const confirmDeleteBtn = document.getElementById('confirm-delete-btn') as HTMLButtonElement;

		let currentCategoryId: string | null = null;
		let isEditing = false;

		// Open modal for creating
		function openCreateModal() {
			isEditing = false;
			currentCategoryId = null;
			form.reset();
			categoryIdInput.value = '';
			modalTitle.textContent = 'Create Category';
			modalSubtitle.textContent = 'Add a new category to organize your content';
			submitText.textContent = 'Create';
			hideError();
			modal.classList.remove('hidden');
			modal.classList.add('flex');
			nameInput.focus();
		}

		// Open modal for editing
		function openEditModal(id: string, name: string, slug: string, description: string) {
			isEditing = true;
			currentCategoryId = id;
			categoryIdInput.value = id;
			nameInput.value = name;
			slugInput.value = slug;
			descriptionInput.value = description || '';
			slugPreview.textContent = slug;
			modalTitle.textContent = 'Edit Category';
			modalSubtitle.textContent = 'Update category details';
			submitText.textContent = 'Save Changes';
			hideError();
			modal.classList.remove('hidden');
			modal.classList.add('flex');
			nameInput.focus();
		}

		// Close modal
		function closeModal() {
			modal.classList.add('hidden');
			modal.classList.remove('flex');
		}

		// Show error
		function showError(message: string) {
			errorMessage.textContent = message;
			formError.classList.remove('hidden');
		}

		// Hide error
		function hideError() {
			formError.classList.add('hidden');
		}

		// Generate slug from name
		function generateSlug(name: string): string {
			return name
				.toLowerCase()
				.trim()
				.replace(/[^\w\s-]/g, '')
				.replace(/[\s_-]+/g, '-')
				.replace(/^-+|-+$/g, '');
		}

		// Auto-generate slug from name
		nameInput.addEventListener('input', () => {
			if (!isEditing || !slugInput.value) {
				const slug = generateSlug(nameInput.value);
				slugInput.value = slug;
				slugPreview.textContent = slug || 'category-slug';
			}
		});

		// Update slug preview
		slugInput.addEventListener('input', () => {
			slugPreview.textContent = slugInput.value || 'category-slug';
		});

		// Event listeners
		document.getElementById('create-category-btn')?.addEventListener('click', openCreateModal);
		document.getElementById('create-category-btn-empty')?.addEventListener('click', openCreateModal);
		document.getElementById('cancel-btn')?.addEventListener('click', closeModal);

		// Close modal on backdrop click
		modal.addEventListener('click', (e) => {
			if (e.target === modal) closeModal();
		});

		// Edit buttons
		document.querySelectorAll('.edit-btn').forEach(btn => {
			btn.addEventListener('click', () => {
				const id = btn.getAttribute('data-id') || '';
				const name = btn.getAttribute('data-name') || '';
				const slug = btn.getAttribute('data-slug') || '';
				const description = btn.getAttribute('data-description') || '';
				openEditModal(id, name, slug, description);
			});
		});

		// Delete functionality
		document.querySelectorAll('.delete-btn').forEach(btn => {
			btn.addEventListener('click', () => {
				const id = btn.getAttribute('data-id') || '';
				const name = btn.getAttribute('data-name') || '';
				const count = parseInt(btn.getAttribute('data-count') || '0');

				currentCategoryId = id;
				deleteCategoryName.textContent = name;

				if (count > 0) {
					deleteWarning.textContent = `Warning: ${count} blog(s) are using this category. You must reassign them first.`;
					confirmDeleteBtn.disabled = true;
					confirmDeleteBtn.classList.add('opacity-50', 'cursor-not-allowed');
				} else {
					deleteWarning.textContent = '';
					confirmDeleteBtn.disabled = false;
					confirmDeleteBtn.classList.remove('opacity-50', 'cursor-not-allowed');
				}

				deleteModal.classList.remove('hidden');
				deleteModal.classList.add('flex');
			});
		});

		document.getElementById('cancel-delete-btn')?.addEventListener('click', () => {
			deleteModal.classList.add('hidden');
			deleteModal.classList.remove('flex');
			currentCategoryId = null;
		});

		deleteModal.addEventListener('click', (e) => {
			if (e.target === deleteModal) {
				deleteModal.classList.add('hidden');
				deleteModal.classList.remove('flex');
				currentCategoryId = null;
			}
		});

		confirmDeleteBtn.addEventListener('click', async () => {
			if (!currentCategoryId) return;

			confirmDeleteBtn.disabled = true;
			deleteSpinner.classList.remove('hidden');

			try {
				const response = await fetch(`/api/admin/categories/${currentCategoryId}`, {
					method: 'DELETE'
				});

				if (response.ok) {
					window.location.reload();
				} else {
					const data = await response.json();
					alert(data.error || 'Failed to delete category');
					confirmDeleteBtn.disabled = false;
					deleteSpinner.classList.add('hidden');
				}
			} catch (error) {
				alert('An error occurred while deleting the category');
				confirmDeleteBtn.disabled = false;
				deleteSpinner.classList.add('hidden');
			}
		});

		// Form submission
		form.addEventListener('submit', async (e) => {
			e.preventDefault();
			hideError();

			const name = nameInput.value.trim();
			const slug = slugInput.value.trim() || generateSlug(name);
			const description = descriptionInput.value.trim();

			if (!name) {
				showError('Category name is required');
				return;
			}

			if (!slug) {
				showError('Slug is required');
				return;
			}

			submitBtn.disabled = true;
			submitSpinner.classList.remove('hidden');

			try {
				const url = isEditing && currentCategoryId
					? `/api/admin/categories/${currentCategoryId}`
					: '/api/admin/categories';

				const method = isEditing ? 'PUT' : 'POST';

				const response = await fetch(url, {
					method,
					headers: { 'Content-Type': 'application/json' },
					body: JSON.stringify({ name, slug, description })
				});

				if (response.ok) {
					window.location.reload();
				} else {
					const data = await response.json();
					showError(data.error || 'Failed to save category');
					submitBtn.disabled = false;
					submitSpinner.classList.add('hidden');
				}
			} catch (error) {
				showError('An error occurred while saving the category');
				submitBtn.disabled = false;
				submitSpinner.classList.add('hidden');
			}
		});
	</script>
