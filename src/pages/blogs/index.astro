<script>
  // Client-side interactivity for "Read more" modal functionality
  document.addEventListener('DOMContentLoaded', () => {
    // Add click handlers for read more buttons that show a preview modal
    const readMoreLinks = document.querySelectorAll('[data-read-more]');
    
    readMoreLinks.forEach(link => {
      link.addEventListener('click', (e) => {
        const blogId = (e.currentTarget as HTMLElement).dataset.blogId;
        const blogTitle = (e.currentTarget as HTMLElement).dataset.blogTitle;
        const blogExcerpt = (e.currentTarget as HTMLElement).dataset.blogExcerpt;
        const blogSlug = (e.currentTarget as HTMLElement).dataset.blogSlug;
        
        if (blogId && blogTitle && blogExcerpt) {
          showBlogPreviewModal(blogTitle, blogExcerpt, blogSlug);
        }
      });
    });
    
    function showBlogPreviewModal(title: string, excerpt: string, slug?: string) {
      // Create modal
      const modal = document.createElement('div');
      modal.className = 'fixed inset-0 z-50 flex items-center justify-center p-4 bg-black/70 backdrop-blur-sm';
      modal.innerHTML = `
        <div class="bg-neutral-800 rounded-xl max-w-lg w-full p-6 border border-neutral-700 shadow-2xl transform scale-100 transition-transform">
          <div class="flex justify-between items-start mb-4">
            <h3 class="text-white text-xl font-semibold pr-4">${title}</h3>
            <button class="modal-close text-gray-400 hover:text-white transition-colors">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
              </svg>
            </button>
          </div>
          <div class="text-gray-300 mb-6 leading-relaxed max-h-60 overflow-y-auto">
            ${excerpt}
          </div>
          <div class="flex gap-3">
            ${slug ? `
              <a href="/blogs/${slug}" class="flex-1 px-4 py-3 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg text-center transition-colors">
                Read Full Article
              </a>
            ` : ''}
            <button class="modal-close px-4 py-3 bg-neutral-700 hover:bg-neutral-600 text-white font-medium rounded-lg transition-colors">
              Close
            </button>
          </div>
        </div>
      `;
      
      document.body.appendChild(modal);
      document.body.style.overflow = 'hidden';
      
      // Close handlers
      const closeModal = () => {
        modal.remove();
        document.body.style.overflow = '';
      };
      
      modal.querySelectorAll('.modal-close').forEach(btn => {
        btn.addEventListener('click', closeModal);
      });
      
      modal.addEventListener('click', (e) => {
        if (e.target === modal) closeModal();
      });
      
      document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape') closeModal();
      }, { once: true });
    }
  });
</script>
