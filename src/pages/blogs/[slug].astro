---
import Layout from "../../layouts/Layout.astro";
import prisma from "../../lib/prisma";

const { slug } = Astro.params;
const blog = await prisma.blog.findUnique({
  where: {
    slug: slug,
  },
  include: {
    image_blog_featuredImageIdToimage: true,
  },
});
const blogAny = blog as any;

if (!blogAny) {
  return Astro.redirect("/404");
}
function formatDate(date: Date): string {
  return new Date(date).toLocaleDateString("en-US", {
    year: "numeric",
    month: "long",
    day: "numeric",
  });
}
function formatViews(views: number): string {
  if (views >= 1000000) {
    return `${(views / 1000000).toFixed(1)}M`;
  } else if (views >= 1000) {
    return `${(views / 1000).toFixed(1)}K`;
  }
  return views.toString();
}
---

<Layout
  title={`PL-${blogAny.title}`}
  description={blogAny.excerpt}
  showNav={false}
>
  <!-- Blog Banner Section -->
  <div class="relative w-full h-[600px] overflow-hidden bg-neutral-900">
    <!-- Background Image with Parallax and Lower Opacity -->
    <div
      class="absolute inset-0 bg-cover bg-center bg-fixed parallax-banner transition-opacity duration-1000"
      style={blogAny.image_blog_featuredImageIdToimage
        ? `background-image: url('${blogAny.image_blog_featuredImageIdToimage.url}'); opacity: 0.5;`
        : `opacity: 0;`}
    >
    </div>

    <!-- Sophisticated Gradient Overlay -->
    <div
      class="absolute inset-0 bg-gradient-to-t from-neutral-900 via-neutral-900/40 to-black/30 z-0"
    >
    </div>

    <!-- Back to Blogs Link -->
    <div
      class="absolute top-8 left-0 right-0 max-w-7xl mx-auto px-6 lg:px-12 z-50"
    >
      <a
        href="/blogs"
        class="group inline-flex items-center gap-2 text-white hover:text-blue-400 transition-all duration-300 text-sm font-medium"
      >
        <svg
          class="w-4 h-4 transition-transform duration-300 group-hover:-translate-x-1"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
        <span class="relative">
          Back to Blogs
          <span
            class="absolute bottom-0 left-0 w-0 h-px bg-white transition-all duration-300 group-hover:w-full"
          ></span>
        </span>
      </a>
    </div>

    <!-- Title and Excerpt Container -->
    <div
      class="relative z-10 flex flex-col items-center justify-center h-full max-w-5xl mx-auto px-6 text-center"
    >
      <h1
        class="text-white mb-6"
        style="font-family: 'Bebas Neue', sans-serif; font-weight: 400; font-size: clamp(48px, 8vw, 84px); line-height: 1.1; letter-spacing: -0.02em; text-shadow: 0 4px 20px rgba(0,0,0,0.6);"
      >
        {blogAny.title}
      </h1>
      <p
        class="text-gray-200 text-lg md:text-2xl leading-relaxed max-w-3xl font-medium italic"
        style="font-family: 'Montserrat', sans-serif;"
      >
        {blogAny.excerpt}
      </p>
    </div>
  </div>

  <div
    class="min-h-screen bg-neutral-900 -mt-20 relative z-20 pt-20 rounded-t-3xl shadow-2xl"
  >
    <!-- Main Article Container -->
    <article class="max-w-4xl mx-auto px-6 lg:px-12 py-12 lg:py-20">
      <!-- Blog Header -->
      <header class="mb-12 lg:mb-16">
        <!-- Metadata -->
        <div
          class="flex flex-wrap items-center gap-4 lg:gap-6 text-gray-400 text-sm"
        >
          <span class="flex items-center gap-2">
            <svg
              class="w-4 h-4"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"
              ></path>
            </svg>
            {formatDate(blogAny.createdAt)}
          </span>
          <span class="flex items-center gap-2">
            <svg
              class="w-4 h-4"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"
              ></path>
            </svg>
            {formatViews(blogAny.views)} views
          </span>
        </div>
      </header>

      <!-- Main Blog Content -->
      <div
        class="prose prose-invert text-white prose-lg lg:prose-xl max-w-none blog-content"
        set:html={blogAny.content}
      />

      <!-- Bottom Navigation -->
      <div class="mt-16 lg:mt-20 pt-8 lg:pt-10 border-t border-neutral-700">
        <a
          href="/blogs"
          class="group inline-flex items-center gap-2 text-gray-400 hover:text-white transition-all duration-300 text-sm font-medium"
        >
          <svg
            class="w-4 h-4 transition-transform duration-300 group-hover:-translate-x-1"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
          </svg>
          <span class="relative">
            Back to Blogs
            <span
              class="absolute bottom-0 left-0 w-0 h-px bg-white transition-all duration-300 group-hover:w-full"
            ></span>
          </span>
        </a>
      </div>
    </article>
  </div>
</Layout>

<style>
  /* Custom CSS for Parallax Effect using background-attachment: fixed */
  .parallax-banner {
    background-size: cover;
    background-position: center;
    background-attachment: fixed;
  }

  /* Style the HTML content to match your design */
  .blog-content {
    color: #d4d4d4; /* gray-300 */
    font-family: "Montserrat", sans-serif;
    line-height: 1.8;
  }

  .blog-content :global(h1),
  .blog-content :global(h2),
  .blog-content :global(h3),
  .blog-content :global(h4),
  .blog-content :global(h5),
  .blog-content :global(h6) {
    color: #ffffff;
    font-family: "Bebas Neue", sans-serif;
    font-weight: 400;
    margin-top: 2.5rem;
    margin-bottom: 1rem;
    letter-spacing: -0.02em;
  }

  .blog-content :global(h1) {
    font-size: 2.5rem;
    line-height: 1.2;
  }
  .blog-content :global(h2) {
    font-size: 2rem;
    line-height: 1.3;
  }
  .blog-content :global(h3) {
    font-size: 1.75rem;
    line-height: 1.3;
  }
  .blog-content :global(h4) {
    font-size: 1.5rem;
    line-height: 1.4;
  }
  .blog-content :global(h5) {
    font-size: 1.25rem;
    line-height: 1.4;
  }
  .blog-content :global(h6) {
    font-size: 1.125rem;
    line-height: 1.4;
  }

  .blog-content :global(p) {
    margin-bottom: 1.5rem;
    font-size: 1.125rem;
  }

  .blog-content :global(a) {
    color: #60a5fa; /* blue-400 */
    text-decoration: underline;
    transition: color 0.2s;
  }

  .blog-content :global(a:hover) {
    color: #93c5fd; /* blue-300 */
  }

  .blog-content :global(strong),
  .blog-content :global(b) {
    color: #ffffff;
    font-weight: 700;
  }

  .blog-content :global(em),
  .blog-content :global(i) {
    font-style: italic;
    color: #e5e5e5;
  }

  .blog-content :global(ul),
  .blog-content :global(ol) {
    margin-left: 1.5rem;
    margin-bottom: 1.5rem;
    padding-left: 0.5rem;
  }

  .blog-content :global(li) {
    margin-bottom: 0.75rem;
    line-height: 1.8;
  }

  .blog-content :global(ul li) {
    list-style-type: disc;
  }

  .blog-content :global(ol li) {
    list-style-type: decimal;
  }

  .blog-content :global(blockquote) {
    border-left: 4px solid #525252; /* neutral-600 */
    padding-left: 1.5rem;
    padding-top: 0.5rem;
    padding-bottom: 0.5rem;
    margin-left: 0;
    margin-bottom: 1.5rem;
    margin-top: 1.5rem;
    font-style: italic;
    color: #a3a3a3; /* neutral-400 */
    background-color: #262626; /* neutral-800 */
    border-radius: 0.25rem;
  }

  .blog-content :global(code) {
    background-color: #262626; /* neutral-800 */
    padding: 0.2rem 0.4rem;
    border-radius: 0.25rem;
    font-size: 0.9em;
    color: #fbbf24; /* amber-400 */
    font-family: "Courier New", monospace;
  }

  .blog-content :global(pre) {
    background-color: #171717; /* neutral-900 */
    border: 1px solid #404040; /* neutral-700 */
    padding: 1.5rem;
    border-radius: 0.5rem;
    overflow-x: auto;
    margin-bottom: 1.5rem;
    margin-top: 1.5rem;
  }

  .blog-content :global(pre code) {
    background-color: transparent;
    padding: 0;
    color: #d4d4d4;
    font-size: 0.95rem;
  }

  .blog-content :global(img) {
    border-radius: 0.5rem;
    margin: 2rem auto;
    max-width: 100%;
    height: auto;
    display: block;
    box-shadow: 0 10px 15px -3px rgb(0 0 0 / 0.3);
  }

  .blog-content :global(table) {
    width: 100%;
    border-collapse: collapse;
    margin-bottom: 1.5rem;
    margin-top: 1.5rem;
    overflow: hidden;
    border-radius: 0.5rem;
  }

  .blog-content :global(th),
  .blog-content :global(td) {
    border: 1px solid #404040; /* neutral-700 */
    padding: 0.75rem 1rem;
    text-align: left;
  }

  .blog-content :global(th) {
    background-color: #262626; /* neutral-800 */
    color: #ffffff;
    font-weight: 600;
    font-family: "Bebas Neue", sans-serif;
    font-size: 1.125rem;
    letter-spacing: 0.025em;
  }

  .blog-content :global(td) {
    background-color: #1c1c1c;
  }

  .blog-content :global(tr:hover td) {
    background-color: #262626;
  }

  .blog-content :global(hr) {
    border: none;
    border-top: 2px solid #404040; /* neutral-700 */
    margin: 3rem 0;
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .blog-content :global(h1) {
      font-size: 2rem;
    }
    .blog-content :global(h2) {
      font-size: 1.75rem;
    }
    .blog-content :global(h3) {
      font-size: 1.5rem;
    }
    .blog-content :global(h4) {
      font-size: 1.25rem;
    }

    .blog-content :global(p) {
      font-size: 1rem;
    }

    .blog-content :global(pre) {
      padding: 1rem;
      font-size: 0.875rem;
    }

    .blog-content :global(table) {
      font-size: 0.875rem;
    }

    .blog-content :global(th),
    .blog-content :global(td) {
      padding: 0.5rem;
    }
  }
</style>
