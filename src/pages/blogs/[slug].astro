---
import Layout from "../../layouts/Layout.astro";
import prisma from "../../lib/prisma";

const { slug } = Astro.params;
const blog = await prisma.blog.findUnique({
  where: {
    slug: slug,
  },
  include: {
    image: true,
  },
});
if (!blog) {
  return Astro.redirect("/404");
}
function formatDate(date: Date): string {
  return new Date(date).toLocaleDateString('en-US', { 
    year: 'numeric', 
    month: 'long', 
    day: 'numeric' 
  });
}
function formatViews(views: number): string {
  if (views >= 1000000) {
    return `${(views / 1000000).toFixed(1)}M`;
  } else if (views >= 1000) {
    return `${(views / 1000).toFixed(1)}K`;
  }
  return views.toString();
}
---
<Layout title=`PL-${blog.title}` description={blog.excerpt}>
  <div class="min-h-screen bg-neutral-900">
    <!-- Main Article Container -->
    <article class="max-w-4xl mx-auto px-6 lg:px-12 py-12 lg:py-20">
      
      <!-- Back Button - Positioned first for better UX -->
      <div class="mb-8 lg:mb-12">
        <a 
          href="/blogs" 
          class="group inline-flex items-center gap-2 text-gray-400 hover:text-white transition-all duration-300 text-sm font-medium"
        >
          <svg class="w-4 h-4 transition-transform duration-300 group-hover:-translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
          </svg>
          <span class="relative">
            Back to Blogs
            <span class="absolute bottom-0 left-0 w-0 h-px bg-white transition-all duration-300 group-hover:w-full"></span>
          </span>
        </a>
      </div>

      <!-- Blog Header -->
      <header class="mb-12 lg:mb-16">
        <!-- Title -->
        <h1 
          class="text-white mb-6 lg:mb-8" 
          style="font-family: 'Bebas Neue', sans-serif; font-weight: 400; font-style: normal; font-size: clamp(48px, 8vw, 72px); line-height: 1.1; letter-spacing: -0.02em;"
        >
          {blog.title}
        </h1>
        
        <!-- Metadata -->
        <div class="flex flex-wrap items-center gap-4 lg:gap-6 text-gray-400 text-sm">
          <span class="flex items-center gap-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
            {formatDate(blog.createdAt)}
          </span>
          <span class="flex items-center gap-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
            </svg>
            {formatViews(blog.views)} views
          </span>
        </div>
      </header>

      <!-- Featured Image / Image Gallery -->
      {blog.image && blog.image.length > 0 && (
        <div class="mb-10 lg:mb-14">
          {blog.image.length === 1 ? (
            <!-- Single Image -->
            <img 
              src={blog.image[0].url} 
              alt={blog.title}
              class="w-full rounded-lg object-cover max-h-[500px] shadow-xl"
            />
          ) : (
            <!-- Multiple Images Grid -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4 lg:gap-6">
              {blog.image.map((img) => (
                <img 
                  src={img.url} 
                  alt={blog.title}
                  class="w-full rounded-lg object-cover h-64 lg:h-72 shadow-xl"
                />
              ))}
            </div>
          )}
        </div>
      )}

      <!-- Excerpt Section -->
      <div class="mb-10 lg:mb-12 pb-8 lg:pb-10 border-b border-neutral-700">
        <p 
          class="text-gray-300 text-lg lg:text-xl leading-relaxed"
          style="font-family: 'Montserrat', sans-serif; font-weight: 600; font-style: italic;"
        >
          {blog.excerpt}
        </p>
      </div>

      <!-- Main Blog Content -->
      <div 
        class="prose prose-invert text-white  prose-lg lg:prose-xl max-w-none blog-content"
        set:html={blog.content}
      />

      <!-- Bottom Navigation -->
      <div class="mt-16 lg:mt-20 pt-8 lg:pt-10 border-t border-neutral-700">
        <a 
          href="/blogs" 
          class="group inline-flex items-center gap-2 text-gray-400 hover:text-white transition-all duration-300 text-sm font-medium"
        >
          <svg class="w-4 h-4 transition-transform duration-300 group-hover:-translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
          </svg>
          <span class="relative">
            Back to Blogs
            <span class="absolute bottom-0 left-0 w-0 h-px bg-white transition-all duration-300 group-hover:w-full"></span>
          </span>
        </a>
      </div>

    </article>
  </div>
</Layout>

<style>
  /* Style the HTML content to match your design */
  .blog-content {
    color: #d4d4d4; /* gray-300 */
    font-family: 'Montserrat', sans-serif;
    line-height: 1.8;
  }

  .blog-content :global(h1),
  .blog-content :global(h2),
  .blog-content :global(h3),
  .blog-content :global(h4),
  .blog-content :global(h5),
  .blog-content :global(h6) {
    color: #ffffff;
    font-family: 'Bebas Neue', sans-serif;
    font-weight: 400;
    margin-top: 2.5rem;
    margin-bottom: 1rem;
    letter-spacing: -0.02em;
  }

  .blog-content :global(h1) { font-size: 2.5rem; line-height: 1.2; }
  .blog-content :global(h2) { font-size: 2rem; line-height: 1.3; }
  .blog-content :global(h3) { font-size: 1.75rem; line-height: 1.3; }
  .blog-content :global(h4) { font-size: 1.5rem; line-height: 1.4; }
  .blog-content :global(h5) { font-size: 1.25rem; line-height: 1.4; }
  .blog-content :global(h6) { font-size: 1.125rem; line-height: 1.4; }

  .blog-content :global(p) {
    margin-bottom: 1.5rem;
    font-size: 1.125rem;
  }

  .blog-content :global(a) {
    color: #60a5fa; /* blue-400 */
    text-decoration: underline;
    transition: color 0.2s;
  }

  .blog-content :global(a:hover) {
    color: #93c5fd; /* blue-300 */
  }

  .blog-content :global(strong),
  .blog-content :global(b) {
    color: #ffffff;
    font-weight: 700;
  }

  .blog-content :global(em),
  .blog-content :global(i) {
    font-style: italic;
    color: #e5e5e5;
  }

  .blog-content :global(ul),
  .blog-content :global(ol) {
    margin-left: 1.5rem;
    margin-bottom: 1.5rem;
    padding-left: 0.5rem;
  }

  .blog-content :global(li) {
    margin-bottom: 0.75rem;
    line-height: 1.8;
  }

  .blog-content :global(ul li) {
    list-style-type: disc;
  }

  .blog-content :global(ol li) {
    list-style-type: decimal;
  }

  .blog-content :global(blockquote) {
    border-left: 4px solid #525252; /* neutral-600 */
    padding-left: 1.5rem;
    padding-top: 0.5rem;
    padding-bottom: 0.5rem;
    margin-left: 0;
    margin-bottom: 1.5rem;
    margin-top: 1.5rem;
    font-style: italic;
    color: #a3a3a3; /* neutral-400 */
    background-color: #262626; /* neutral-800 */
    border-radius: 0.25rem;
  }

  .blog-content :global(code) {
    background-color: #262626; /* neutral-800 */
    padding: 0.2rem 0.4rem;
    border-radius: 0.25rem;
    font-size: 0.9em;
    color: #fbbf24; /* amber-400 */
    font-family: 'Courier New', monospace;
  }

  .blog-content :global(pre) {
    background-color: #171717; /* neutral-900 */
    border: 1px solid #404040; /* neutral-700 */
    padding: 1.5rem;
    border-radius: 0.5rem;
    overflow-x: auto;
    margin-bottom: 1.5rem;
    margin-top: 1.5rem;
  }

  .blog-content :global(pre code) {
    background-color: transparent;
    padding: 0;
    color: #d4d4d4;
    font-size: 0.95rem;
  }

  .blog-content :global(img) {
    border-radius: 0.5rem;
    margin: 2rem auto;
    max-width: 100%;
    height: auto;
    display: block;
    box-shadow: 0 10px 15px -3px rgb(0 0 0 / 0.3);
  }

  .blog-content :global(table) {
    width: 100%;
    border-collapse: collapse;
    margin-bottom: 1.5rem;
    margin-top: 1.5rem;
    overflow: hidden;
    border-radius: 0.5rem;
  }

  .blog-content :global(th),
  .blog-content :global(td) {
    border: 1px solid #404040; /* neutral-700 */
    padding: 0.75rem 1rem;
    text-align: left;
  }

  .blog-content :global(th) {
    background-color: #262626; /* neutral-800 */
    color: #ffffff;
    font-weight: 600;
    font-family: 'Bebas Neue', sans-serif;
    font-size: 1.125rem;
    letter-spacing: 0.025em;
  }

  .blog-content :global(td) {
    background-color: #1c1c1c;
  }

  .blog-content :global(tr:hover td) {
    background-color: #262626;
  }

  .blog-content :global(hr) {
    border: none;
    border-top: 2px solid #404040; /* neutral-700 */
    margin: 3rem 0;
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .blog-content :global(h1) { font-size: 2rem; }
    .blog-content :global(h2) { font-size: 1.75rem; }
    .blog-content :global(h3) { font-size: 1.5rem; }
    .blog-content :global(h4) { font-size: 1.25rem; }
    
    .blog-content :global(p) {
      font-size: 1rem;
    }

    .blog-content :global(pre) {
      padding: 1rem;
      font-size: 0.875rem;
    }

    .blog-content :global(table) {
      font-size: 0.875rem;
    }

    .blog-content :global(th),
    .blog-content :global(td) {
      padding: 0.5rem;
    }
  }
</style>
