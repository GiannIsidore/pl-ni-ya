---
import Layout from "../layouts/Layout.astro";
import prisma from "../lib/prisma";

const { user } = Astro.locals;

// Redirect if not authenticated (shouldn't happen due to middleware, but safety check)
if (!user) {
  return Astro.redirect("/login?returnUrl=/profile");
}

// Fetch user's threads with related data
const userThreads = await prisma.thread.findMany({
  where: { authorId: user.id },
  include: {
    forum: true,
    _count: {
      select: {
        comments: true,
        likes: true,
      },
    },
  },
  orderBy: { createdAt: 'desc' },
  take: 20,
});

// Fetch user's comments with thread context
const userComments = await prisma.comment.findMany({
  where: { authorId: user.id },
  include: {
    thread: {
      include: {
        forum: true,
      },
    },
  },
  orderBy: { createdAt: 'desc' },
  take: 20,
});

// Calculate statistics
const totalThreads = await prisma.thread.count({
  where: { authorId: user.id },
});

const totalComments = await prisma.comment.count({
  where: { authorId: user.id },
});

// Calculate likes received on user's threads
const threadLikes = await prisma.like.count({
  where: {
    thread: {
      authorId: user.id,
    },
  },
});

// Calculate likes received on user's comments
const commentLikes = await prisma.like.count({
  where: {
    comment: {
      authorId: user.id,
    },
  },
});

const totalLikes = threadLikes + commentLikes;

// Helper functions
function formatDate(date: Date): string {
  const d = new Date(date);
  const now = new Date();
  const diffMs = now.getTime() - d.getTime();
  const diffMins = Math.floor(diffMs / 60000);
  const diffHours = Math.floor(diffMs / 3600000);
  const diffDays = Math.floor(diffMs / 86400000);

  if (diffMins < 1) return 'just now';
  if (diffMins < 60) return `${diffMins}m ago`;
  if (diffHours < 24) return `${diffHours}h ago`;
  if (diffDays < 7) return `${diffDays}d ago`;
  
  return d.toLocaleDateString('en-US', { 
    year: 'numeric', 
    month: 'short', 
    day: 'numeric' 
  });
}

function formatJoinDate(date: Date): string {
  return new Date(date).toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  });
}

function stripHtml(html: string): string {
  return html.replace(/<[^>]*>/g, '').replace(/&nbsp;/g, ' ').trim();
}

function getContentPreview(content: string, maxLength: number = 150): string {
  const text = stripHtml(content);
  if (text.length <= maxLength) return text;
  return text.substring(0, maxLength).trim() + '...';
}

function formatViews(views: number): string {
  if (views >= 1000000) {
    return `${(views / 1000000).toFixed(1)}M`;
  } else if (views >= 1000) {
    return `${(views / 1000).toFixed(1)}K`;
  }
  return views.toString();
}
---

<Layout title={`PL-${user.username || user.name || 'Profile'}`}>
  <section class="text-white px-6 lg:px-12 pb-16 lg:pb-24 pt-16 lg:pt-24 bg-neutral-900 min-h-screen">
    <div class="max-w-7xl mx-auto">
      <!-- Profile Header -->
      <div class="bg-neutral-800 rounded-lg border border-neutral-700 p-8 mb-8">
        <div class="flex flex-col md:flex-row items-center md:items-start gap-6">
          <!-- Avatar -->
          <div class="flex-shrink-0">
            {user.avatar ? (
              <img 
                src={user.avatar} 
                alt={user.username || user.name || 'User'}
                class="w-24 h-24 rounded-full object-cover border-4 border-neutral-700"
              />
            ) : (
              <div class="w-24 h-24 rounded-full bg-neutral-700 flex items-center justify-center border-4 border-neutral-700">
                <svg class="w-16 h-16 text-neutral-400" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd" />
                </svg>
              </div>
            )}
          </div>

          <!-- User Info -->
          <div class="flex-1 text-center md:text-left">
            <h1 
              class="text-white mb-2" 
              style="font-family: 'Bebas Neue', sans-serif; font-weight: 400; font-style: normal; font-size: clamp(36px, 6vw, 56px); line-height: 1.1; letter-spacing: -0.02em;"
            >
              {user.username || user.name || 'User'}
            </h1>
            <p class="text-gray-400 text-lg mb-4">{user.email}</p>
            <p class="text-gray-500 text-sm">
              Joined {formatJoinDate(user.createdAt)}
            </p>
          </div>
        </div>
      </div>

      <!-- Statistics Section -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-8">
        <!-- Total Threads -->
        <div class="bg-neutral-800 rounded-lg border border-neutral-700 p-6">
          <div class="flex items-center gap-4">
            <div class="w-12 h-12 rounded-lg bg-blue-600/20 flex items-center justify-center">
              <svg class="w-6 h-6 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
              </svg>
            </div>
            <div>
              <p class="text-gray-400 text-sm mb-1">Total Threads</p>
              <p class="text-white text-2xl font-semibold">{totalThreads}</p>
            </div>
          </div>
        </div>

        <!-- Total Comments -->
        <div class="bg-neutral-800 rounded-lg border border-neutral-700 p-6">
          <div class="flex items-center gap-4">
            <div class="w-12 h-12 rounded-lg bg-green-600/20 flex items-center justify-center">
              <svg class="w-6 h-6 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
              </svg>
            </div>
            <div>
              <p class="text-gray-400 text-sm mb-1">Total Comments</p>
              <p class="text-white text-2xl font-semibold">{totalComments}</p>
            </div>
          </div>
        </div>

        <!-- Likes Received -->
        <div class="bg-neutral-800 rounded-lg border border-neutral-700 p-6">
          <div class="flex items-center gap-4">
            <div class="w-12 h-12 rounded-lg bg-purple-600/20 flex items-center justify-center">
              <svg class="w-6 h-6 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 10h4.764a2 2 0 011.789 2.894l-3.5 7A2 2 0 0115.263 21h-4.017c-.163 0-.326-.02-.485-.06L7 20m7-10V5a2 2 0 00-2-2h-.095c-.5 0-.905.405-.905.905 0 .714-.211 1.412-.608 2.006L7 11v9m7-10h-2M7 20H5a2 2 0 01-2-2v-6a2 2 0 012-2h2.5" />
              </svg>
            </div>
            <div>
              <p class="text-gray-400 text-sm mb-1">Likes Received</p>
              <p class="text-white text-2xl font-semibold">{totalLikes}</p>
            </div>
          </div>
        </div>
      </div>

      <!-- Tabs Section -->
      <div class="mb-6">
        <div class="flex gap-4 border-b border-neutral-700">
          <button 
            id="threads-tab"
            class="tab-btn px-6 py-3 text-white font-medium border-b-2 border-blue-500 transition-colors"
          >
            My Threads ({userThreads.length})
          </button>
          <button 
            id="comments-tab"
            class="tab-btn px-6 py-3 text-gray-400 font-medium border-b-2 border-transparent hover:text-white transition-colors"
          >
            My Comments ({userComments.length})
          </button>
        </div>
      </div>

      <!-- Threads Section -->
      <div id="threads-section" class="tab-content">
        {userThreads.length === 0 ? (
          <div class="bg-neutral-800 rounded-lg border border-neutral-700 p-16 text-center">
            <div class="max-w-md mx-auto">
              <svg class="w-16 h-16 mx-auto mb-6 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
              </svg>
              <p class="text-gray-300 text-xl mb-2 font-semibold">No threads yet</p>
              <p class="text-gray-400 text-base mb-8">Start a discussion by creating your first thread!</p>
              <a 
                href="/forums"
                class="inline-block border border-white text-white rounded-md py-3 px-8 hover:bg-white hover:text-black transition-all duration-300 text-sm font-medium"
              >
                Browse Forums
              </a>
            </div>
          </div>
        ) : (
          <div class="space-y-4">
            {userThreads.map((thread: typeof userThreads[0]) => {
              const commentCount = thread._count.comments;
              const likeCount = thread._count.likes;
              
              return (
                <a 
                  href={`/forums/${thread.forum.slug}/${thread.slug}`}
                  class="block bg-neutral-800 rounded-lg border border-neutral-700 p-6 hover:border-neutral-600 hover:bg-neutral-750 transition-all duration-300 group"
                >
                  <div class="flex gap-4">
                    <!-- Forum Badge -->
                    <div class="flex-shrink-0">
                      <span class="inline-block px-3 py-1 text-xs font-semibold bg-blue-600/20 text-blue-400 rounded border border-blue-600/30">
                        {thread.forum.name}
                      </span>
                    </div>

                    <!-- Content -->
                    <div class="flex-1 min-w-0">
                      <h3 
                        class="text-white font-semibold text-xl mb-2 group-hover:text-blue-400 transition-colors line-clamp-2"
                        style="font-family: 'Bebas Neue', sans-serif; font-weight: 400; letter-spacing: -0.02em;"
                      >
                        {thread.title}
                      </h3>
                      
                      {thread.content && (
                        <p class="text-gray-400 text-sm mb-4 line-clamp-2 leading-relaxed">
                          {getContentPreview(thread.content)}
                        </p>
                      )}

                      <!-- Stats Row -->
                      <div class="flex items-center gap-4 text-gray-400 text-xs lg:text-sm flex-wrap">
                        <span class="flex items-center gap-1.5">
                          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
                          </svg>
                          {commentCount} {commentCount === 1 ? 'comment' : 'comments'}
                        </span>
                        <span class="flex items-center gap-1.5">
                          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 10h4.764a2 2 0 011.789 2.894l-3.5 7A2 2 0 0115.263 21h-4.017c-.163 0-.326-.02-.485-.06L7 20m7-10V5a2 2 0 00-2-2h-.095c-.5 0-.905.405-.905.905 0 .714-.211 1.412-.608 2.006L7 11v9m7-10h-2M7 20H5a2 2 0 01-2-2v-6a2 2 0 012-2h2.5" />
                          </svg>
                          {likeCount} {likeCount === 1 ? 'like' : 'likes'}
                        </span>
                        <span class="flex items-center gap-1.5">
                          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                          </svg>
                          {formatViews(thread.views)} views
                        </span>
                        <span class="text-gray-500">
                          {formatDate(thread.createdAt)}
                        </span>
                      </div>
                    </div>
                  </div>
                </a>
              );
            })}
          </div>
        )}
      </div>

      <!-- Comments Section -->
      <div id="comments-section" class="tab-content hidden">
        {userComments.length === 0 ? (
          <div class="bg-neutral-800 rounded-lg border border-neutral-700 p-16 text-center">
            <div class="max-w-md mx-auto">
              <svg class="w-16 h-16 mx-auto mb-6 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
              </svg>
              <p class="text-gray-300 text-xl mb-2 font-semibold">No comments yet</p>
              <p class="text-gray-400 text-base mb-8">Start engaging with the community by leaving your first comment!</p>
              <a 
                href="/forums"
                class="inline-block border border-white text-white rounded-md py-3 px-8 hover:bg-white hover:text-black transition-all duration-300 text-sm font-medium"
              >
                Browse Forums
              </a>
            </div>
          </div>
        ) : (
          <div class="space-y-4">
            {userComments.map((comment: typeof userComments[0]) => {
              return (
                <a 
                  href={`/forums/${comment.thread.forum.slug}/${comment.thread.slug}#comment-${comment.id}`}
                  class="block bg-neutral-800 rounded-lg border border-neutral-700 p-6 hover:border-neutral-600 hover:bg-neutral-750 transition-all duration-300 group"
                >
                  <div class="flex gap-4">
                    <!-- Thread Info -->
                    <div class="flex-1 min-w-0">
                      <div class="flex items-center gap-2 mb-2">
                        <span class="inline-block px-2 py-1 text-xs font-semibold bg-blue-600/20 text-blue-400 rounded border border-blue-600/30">
                          {comment.thread.forum.name}
                        </span>
                        <span class="text-gray-500 text-xs">
                          {formatDate(comment.createdAt)}
                        </span>
                      </div>
                      
                      <h4 
                        class="text-white font-semibold text-lg mb-3 group-hover:text-blue-400 transition-colors line-clamp-1"
                        style="font-family: 'Bebas Neue', sans-serif; font-weight: 400; letter-spacing: -0.02em;"
                      >
                        {comment.thread.title}
                      </h4>
                      
                      <p class="comment-preview text-gray-400 text-sm mb-3 line-clamp-3 leading-relaxed">
                        {getContentPreview(comment.content, 200)}
                      </p>
                      
                      <p class="text-gray-500 text-xs">
                        View thread â†’
                      </p>
                    </div>
                  </div>
                </a>
              );
            })}
          </div>
        )}
      </div>
    </div>
  </section>
</Layout>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const threadsTab = document.getElementById('threads-tab');
    const commentsTab = document.getElementById('comments-tab');
    const threadsSection = document.getElementById('threads-section');
    const commentsSection = document.getElementById('comments-section');

    if (!threadsTab || !commentsTab || !threadsSection || !commentsSection) return;

    // TypeScript now knows these are not null after the check
    const tab = threadsTab as HTMLButtonElement;
    const cTab = commentsTab as HTMLButtonElement;
    const tSection = threadsSection as HTMLElement;
    const cSection = commentsSection as HTMLElement;

    function switchTab(activeTab: 'threads' | 'comments') {
      if (activeTab === 'threads') {
        tab.classList.add('text-white', 'border-blue-500');
        tab.classList.remove('text-gray-400', 'border-transparent');
        cTab.classList.add('text-gray-400', 'border-transparent');
        cTab.classList.remove('text-white', 'border-blue-500');
        tSection.classList.remove('hidden');
        cSection.classList.add('hidden');
      } else {
        cTab.classList.add('text-white', 'border-blue-500');
        cTab.classList.remove('text-gray-400', 'border-transparent');
        tab.classList.add('text-gray-400', 'border-transparent');
        tab.classList.remove('text-white', 'border-blue-500');
        cSection.classList.remove('hidden');
        tSection.classList.add('hidden');
      }
    }

    tab.addEventListener('click', () => switchTab('threads'));
    cTab.addEventListener('click', () => switchTab('comments'));
  });
</script>

<style>
  @reference "../styles/global.css";
  
  .line-clamp-1 {
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .comment-preview :global(p) {
    @apply mb-2;
  }

  .comment-preview :global(ul),
  .comment-preview :global(ol) {
    @apply ml-6 mb-2;
  }

  .comment-preview :global(ul) {
    @apply list-disc;
  }

  .comment-preview :global(ol) {
    @apply list-decimal;
  }

  .comment-preview :global(blockquote) {
    @apply border-l-4 border-blue-400 pl-4 italic text-gray-300 my-2 bg-blue-900/20 py-2 rounded-r;
  }

  .comment-preview :global(a) {
    @apply text-blue-400 underline hover:text-blue-300;
  }

  .comment-preview :global(img) {
    @apply max-w-full h-auto rounded my-2;
  }

  .comment-preview :global(code) {
    @apply bg-neutral-700 px-1.5 py-0.5 rounded text-amber-400 text-sm;
  }

  .comment-preview :global(pre) {
    @apply bg-neutral-900 border border-neutral-700 p-4 rounded my-2 overflow-x-auto;
  }

  .comment-preview :global(pre code) {
    @apply bg-transparent p-0 text-gray-200;
  }
</style>
