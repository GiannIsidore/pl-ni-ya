---
import Layout from "../layouts/Layout.astro";
import UnderConstruction from "../components/UnderConstruction.astro";
---

<Layout title="Ideas - Project Likha">
  <section class="text-white px-6 lg:px-12 pb-16 lg:pb-24 pt-16 lg:pt-24 bg-neutral-900 min-h-screen">
    <div class="max-w-4xl mx-auto">
      <div class="text-center py-20">
        <h1 
          class="text-white mb-6" 
          style="font-family: 'Bebas Neue', sans-serif; font-weight: 400; font-style: normal; font-size: clamp(48px, 8vw, 72px); line-height: 1.1; letter-spacing: -0.02em;"
        >
          Ideas
        </h1>
        <p class="text-gray-400 text-lg max-w-2xl mx-auto">
          This page is currently under construction. Check back soon to share and explore ideas with the community.
        </p>
      </div>
    </div>
  </section>
  <UnderConstruction />
</Layout>
