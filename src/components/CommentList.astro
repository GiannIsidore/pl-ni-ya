---
import CommentItem from './CommentItem.astro';

interface Comment {
  id: number;
  content: string;
  createdAt: Date;
  author: {
    id: string;
    username: string;
    avatar?: string | null;
  };
  replies?: Comment[];
}

interface Props {
  comments: Comment[];
  threadId: number;
}

const { comments, threadId } = Astro.props;
---

<div class="comment-list space-y-4">
  {comments.length === 0 ? (
    <div class="flex flex-col items-center justify-center py-12">
      <svg class="w-16 h-16 text-neutral-600 mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
      </svg>
      <h3 class="text-white text-lg font-semibold mb-1">No comments yet</h3>
      <p class="text-neutral-400 text-center">Be the first to share your thoughts</p>
    </div>
  ) : (
    <>
      {comments.map((comment) => (
        <CommentItem comment={comment} threadId={threadId} />
      ))}
    </>
  )}
</div>
