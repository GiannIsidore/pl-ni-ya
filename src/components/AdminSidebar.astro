---
interface Props {
	user: any;
}

const { user } = Astro.props;
const username = user?.username || user?.name || "Admin";

// Role-based menu visibility - defensive approach
const isAdmin = user?.role === "ADMIN";
const isModerator = user?.role === "MODERATOR";
const canAccessSettings = isAdmin;
const canManageRoles = isAdmin;
---

<aside
	id="admin-sidebar"
	class="w-64 bg-white border-r border-gray-200 flex flex-col h-full lg:translate-x-0 -translate-x-full transition-transform duration-200 fixed lg:relative z-50"
