<script>
	// Highlight active navigation item
	document.addEventListener("DOMContentLoaded", () => {
		const currentPath = window.location.pathname;
		const navItems = document.querySelectorAll(".admin-nav-item");

		navItems.forEach((item) => {
			const href = item.getAttribute("href");
			if (
				href &&
				(href === currentPath ||
					(href !== "/admin" && currentPath.startsWith(href)) ||
					(href === "/admin/categories" && currentPath === "/admin/categories"))
			) {
				const iconContainer = item.querySelector("div");
				item.classList.remove("text-neutral-400");
				item.classList.add(
					"bg-white/10",
					"text-white",
					"shadow-lg",
					"shadow-black/20",
				);
				if (iconContainer) {
					iconContainer.classList.remove("bg-neutral-800");
					iconContainer.classList.add("bg-blue-600", "text-white");
					iconContainer
						.querySelector("svg")
						?.classList.add("text-white");
					iconContainer
						.querySelector("svg")
						?.classList.remove("group-hover:text-blue-400");
				}
			}
		});
	});
</script>

