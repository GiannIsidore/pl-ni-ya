---
import { Image } from "astro:assets";
import char from "../assets/Char.svg";
import { cn } from "../lib/utils";
---

<section
  class={cn(
    "w-full min-h-[calc(100vh-80px)]",
    "[background-size:20px_20px]",
    "[background-image:radial-gradient(#d4d4d4_1px,transparent_1px)]",
    "dark:[background-image:radial-gradient(#404040_1px,transparent_1px)]",
    "text-white px-6 lg:px-12 pt-16 lg:pt-24 relative",
    "bg-neutral-900",
    "flex items-end",
  )}
>
  <div
    class="max-w-7xl mx-auto w-full flex flex-col lg:flex-row items-end justify-between gap-12 pb-0"
  >
    <div class="flex-1 space-y-6 pb-12 lg:pb-24">
      <h1
        style="font-family: 'Bebas Neue', sans-serif; font-weight: 400; font-style: normal; font-size: 124.64px; line-height: 104px; letter-spacing: -0.04em; vertical-align: middle; width: 548px; height: 204px; top: 308px; left: 182px; opacity: 1;"
      >
        WELCOME TO<br />PROJECT LIKHA
      </h1>
      <p class="text-lg lg:text-xl text-gray-300">
        A community for tech enthusiasts and programmers.
      </p>
      <a
        href="/blogs"
        class="bg-white text-black rounded-md py-3 px-6 hover:bg-gray-100 transition-colors font-medium"
      >
        Explore now
      </a>
    </div>
    <div class="flex-1 flex justify-center lg:justify-end items-end">
      <Image
        src={char}
        alt="Character illustration"
        width={524}
        height={684}
        class="w-[524px] h-auto object-contain"
      />
    </div>
  </div>
</section>
