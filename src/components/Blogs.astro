---
import prisma from "../lib/prisma";

const blogs = await prisma.blog.findMany({
  orderBy: {
    createdAt: 'desc', 
  },
  take: 5,             
  include: {
    image: true,       
  },
})

const [featuredBlog, ...smallerBlogs] = blogs

function formatDate(date: Date): string {
  return new Date(date).toLocaleDateString('en-US', { 
    year: 'numeric', 
    month: 'long', 
    day: 'numeric' 
  });
}


function formatViews(views: number): string {
  if (views >= 1000000) {
    return `${(views / 1000000).toFixed(1)}M`;
  } else if (views >= 1000) {
    return `${(views / 1000).toFixed(1)}K`;
  }
  return views.toString();
}
---

<section class="text-white px-6 lg:px-12 pb-16 lg:pb-24 pt-16 lg:pt-24 bg-neutral-900">
  <div class="max-w-7xl mx-auto">
    <div class="mb-12">
      <h2 class="text-white mb-4" style="font-family: 'Bebas Neue', sans-serif; font-weight: 400; font-style: normal; font-size: 113.42px; line-height: 94.64px; letter-spacing: -0.04em; vertical-align: middle;">
        BLOGS
      </h2>
      <p class="text-white" style="font-family: 'Montserrat', sans-serif; font-weight: 600; font-style: normal; font-size: 24px; line-height: 22px; letter-spacing: -0.04em; vertical-align: middle;">
        Explore our latest blogs and updates relating to 
        <br>
        technology, science and many more.
      </p>
    </div>
    
    {blogs.length === 0 ? (
      <div class="flex flex-col items-center justify-center py-20">
        <svg class="w-24 h-24 text-neutral-600 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
        </svg>
        <h3 class="text-white text-xl font-semibold mb-2">No blogs</h3>
        <p class="text-neutral-400 text-center">Check back later for new content</p>
      </div>
    ) : (
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-6 lg:gap-8">
        <!-- Featured Blog (Left - Large) -->
        {featuredBlog && (
          <article class="lg:col-span-2">
            <a href={`/blogs/${featuredBlog.slug}`} class="block group">
              {featuredBlog.image && featuredBlog.image.length > 0 ? (
                <img 
                  src={featuredBlog.image[0].url} 
                  alt={featuredBlog.title}
                  class="w-full h-64 md:h-80 lg:h-96 object-cover rounded-lg mb-4"
                />
              ) : (
                <div class="w-full h-64 md:h-80 lg:h-96 bg-neutral-700 flex items-center justify-center rounded-lg mb-4">
                  <span class="text-neutral-500 text-sm">No Image</span>
                </div>
              )}
              <div class="mb-3">
                <span class="inline-block px-3 py-1 bg-neutral-800 text-white text-xs font-semibold rounded border border-neutral-700">
                  General News
                </span>
              </div>
              <h3 class="text-white font-semibold text-2xl md:text-3xl lg:text-4xl mb-3 group-hover:text-blue-400 transition-colors">
                {featuredBlog.title}
              </h3>
              <p class="text-gray-400 text-sm mb-4">
                {formatDate(featuredBlog.createdAt)}
              </p>
            </a>
          </article>
        )}

        <!-- Smaller Blogs (Right - Vertical Stack) -->
        <div class="flex flex-col gap-4 lg:col-span-1">
          {smallerBlogs.map((blog) => (
            <article class="bg-neutral-800 rounded-lg overflow-hidden border border-neutral-700">
              <a href={`/blogs/${blog.slug}`} class="flex gap-4 p-4 group">
                {blog.image && blog.image.length > 0 ? (
                  <img 
                    src={blog.image[0].url} 
                    alt={blog.title}
                    class="w-24 h-24 flex-shrink-0 object-cover rounded"
                  />
                ) : (
                  <div class="w-24 h-24 flex-shrink-0 bg-neutral-700 flex items-center justify-center rounded">
                    <span class="text-neutral-500 text-xs">No Image</span>
                  </div>
                )}
                <div class="flex-1 flex flex-col min-w-0">
                  <span class="inline-block px-2 py-0.5 bg-neutral-900 text-white text-xs font-semibold rounded border border-neutral-700 mb-2 w-fit">
                    General News
                  </span>
                  <h4 class="text-white font-semibold text-sm mb-2 line-clamp-2 group-hover:text-blue-400 transition-colors">
                    {blog.title}
                  </h4>
                  <p class="text-gray-400 text-xs">
                    {formatDate(blog.createdAt)}
                  </p>
                </div>
              </a>
            </article>
          ))}
        </div>
      </div>
    )}
  </div>
</section>
